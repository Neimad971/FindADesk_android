<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fr.esgi.findadesk.FindLocationActivity" >

	<Spinner
    android:id="@+id/product_type_spinner"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" />
	
	<Spinner
    android:id="@+id/location_spinner"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/product_type_spinner" />
	
	<Spinner
    android:id="@+id/from_spinner"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/location_spinner" />
	
	<Spinner
    android:id="@+id/minimum_seats_spinner"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/from_spinner" />
	
	<Spinner
    android:id="@+id/min_price_spinner"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/minimum_seats_spinner" />

	<Spinner
    android:id="@+id/max_price_spinner"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/min_price_spinner" />

	<Button
	    android:id="@+id/search_btn"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentLeft="true"
	    android:layout_alignRight="@+id/max_price_spinner"
	    android:text="@string/search_btn" />

</RelativeLayout>
