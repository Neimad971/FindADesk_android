<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fr.esgi.findadesk.FindLocationActivity" >

    <TextView
        android:id="@+id/product_type_spinner_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/product_type_text"
        android:textSize="12sp" />

    <Spinner
        android:id="@+id/product_type_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_type_spinner_text" />
    
    <TextView
        android:id="@+id/location_spinner_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/location_spinner_text"
        android:layout_below="@+id/product_type_spinner"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/location_spinner"
        android:inputType="text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location_spinner_text" />
    
    <TextView
        android:id="@+id/min_seats_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/min_seats_text"
        android:layout_below="@+id/location_spinner"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/minimum_seats_spinner"
        android:inputType="number"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/min_seats_text" />
   
    <TextView
        android:id="@+id/min_price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/min_price_text"
        android:layout_below="@+id/minimum_seats_spinner"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/min_price_spinner"
        android:inputType="number"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/min_price_text" />
    
    <TextView
        android:id="@+id/max_price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/max_price_text"
        android:layout_below="@+id/min_price_spinner"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/max_price_spinner"
        android:inputType="number"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/max_price_text" />

    <Button
        android:id="@+id/search_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/max_price_spinner"
        android:text="@string/search_btn" />

</RelativeLayout>