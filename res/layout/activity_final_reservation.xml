<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fr.esgi.findadesk.FinalReservationActivity" >

    <Button
        android:id="@+id/buttonPay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Payer"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/txtCrypto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtDateCarte"
        android:layout_below="@+id/txtDateCarte"
        android:layout_marginTop="20dp"
        android:text="Cryptogramme :"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/txtDateCarte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtTypeCarte"
        android:layout_below="@+id/txtTypeCarte"
        android:layout_marginTop="20dp"
        android:text="Date expiration :"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/txtTypeCarte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtNumCarte"
        android:layout_below="@+id/txtNumCarte"
        android:layout_marginTop="20dp"
        android:text="Type de carte :"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/txtNumCarte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="50dp"
        android:text="Numéro de carte :"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_marginTop="22dp"
        android:text="Dates :" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtNumCarte"
        android:layout_below="@+id/TextView01"
        android:layout_marginTop="25dp"
        android:text="Date de début :"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView02"
        android:layout_below="@+id/TextView02"
        android:layout_marginTop="30dp"
        android:text="Date de fin :"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView03"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:text="Paiement : " />

    <EditText
        android:id="@+id/dateDebutRes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TextView02"
        android:layout_alignBottom="@+id/TextView02"
        android:layout_toRightOf="@+id/txtNumCarte"
        android:ems="10"
        android:inputType="date" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/numCarte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtNumCarte"
        android:layout_alignBottom="@+id/txtNumCarte"
        android:layout_alignLeft="@+id/dateFinRes"
        android:ems="10" />

    <EditText
        android:id="@+id/dateFinRes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TextView03"
        android:layout_alignBottom="@+id/TextView03"
        android:layout_alignLeft="@+id/dateDebutRes"
        android:ems="10"
        android:inputType="date" />

    <Spinner
        android:id="@+id/spinnertypecarte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtTypeCarte"
        android:layout_alignLeft="@+id/button1" />

    <EditText
        android:id="@+id/dateExpiration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtDateCarte"
        android:layout_alignBottom="@+id/txtDateCarte"
        android:layout_toRightOf="@+id/TextView02"
        android:ems="10" />

    <EditText
        android:id="@+id/cryptogramme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtCrypto"
        android:layout_alignBottom="@+id/txtCrypto"
        android:layout_alignParentRight="true"
        android:ems="10" />

</RelativeLayout>