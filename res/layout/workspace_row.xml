<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:baselineAligned="false"
    android:weightSum="2"
    android:padding="5dip" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

         <TextView
        android:id="@+id/typeDesk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty"
        android:textSize="12sp"
        android:textStyle="bold"
        android:typeface="sans"
        android:textColor="#000000" />
         
        <TextView
        android:id="@+id/placeDesk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/typeDesk"
        android:text="@string/empty"
        android:textSize="12sp"
        android:textStyle="bold"
        android:typeface="sans"
        android:textColor="#000000" />
        
        <TextView
        android:id="@+id/dispoDesk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/placeDesk"
        android:text="@string/empty"
        android:textSize="12sp"
        android:textStyle="bold"
        android:typeface="sans"
        android:textColor="#000000" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <TextView
        android:id="@+id/nbPlacesDesk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#000000" />
        
        <TextView
        android:id="@+id/nbReservationDesk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nbPlacesDesk"
        android:text="@string/empty"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#000000" />
                
        <TextView
        android:id="@+id/priceDesk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nbReservationDesk"
        android:text="@string/empty"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#000000" />
	
    </RelativeLayout>
    
    </LinearLayout>